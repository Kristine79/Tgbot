# ===========================================
# Telegram Bot Configuration
# ===========================================

# Telegram Bot Token от @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# IDs администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# Username поддержки (без @)
SUPPORT_USERNAME=your_support_username


# ===========================================
# CryptoBot API Configuration
# ===========================================

# API Token от @CryptoBot (раздел Apps → API Token)
CRYPTOBOT_API_TOKEN=your_cryptobot_api_token_here

# ID приложения из URL (например, A511773 из .../app/A511773)
CRYPTOBOT_APP_ID=A511773

# URL API (обычно менять не нужно)
CRYPTOBOT_API_URL=https://pay.crypt.bot/api/


# ===========================================
# Database Configuration
# ===========================================

# Путь к файлу базы данных
DB_PATH=payments.db


# ===========================================
# Webhook Configuration (Production)
# ===========================================

# Домен для вебхука (обязателен HTTPS для продакшена)
WEBHOOK_HOST=https://your-domain.com

# Путь вебхука
WEBHOOK_PATH=/webhook

# Секретный ключ для подписи вебхуков
WEBHOOK_SECRET=your_secret_key_here

# Адрес и порт для запуска веб-сервера
LISTEN_HOST=0.0.0.0
LISTEN_PORT=8080


# ===========================================
# Optional: Logging
# ===========================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
